<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.yfo.nougatnightmode.TunerSettingActivity">
    <TextView
        android:id="@+id/tv_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_padding"
        android:layout_margin="@dimen/item_margin"
        android:text="@string/text_instructions"/>
    <Button android:id="@+id/button_enable_tuner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/item_padding"
        android:layout_margin="@dimen/item_margin"
        android:layout_below="@id/tv_instructions"
        android:text="Search for more info"
        android:visibility="visible"
        />
    <Button android:id="@+id/button_enable_nightmode"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/item_padding"
        android:layout_margin="@dimen/item_margin"
        android:text="Enable Nightmode"
        android:layout_below="@id/button_enable_tuner"/>
    <TextView
        android:id="@+id/tv_extra_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_padding"
        android:layout_below="@id/button_enable_nightmode"
        android:layout_margin="@dimen/item_margin"
        android:text="@string/text_info"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Nougat and Nougat N logo are trademarks of Google Inc"/>

</RelativeLayout>
